{
	long esV1725, h1, h2, h3, h4, word;
	v1725_ptr[card]->forced_data_flush_broadcast = 0x1;
	if( (v1725_ptr[card]->acquisition_status & 0x8) && (v1725_EF_ptr[card]->readout_status & 0x1) ) //event ready
	{
		esV1725 = v1725_ptr[card]->event_size;	
		if(esV1725>0)
		{
			for(i=0; i<esV1725;i++)
			{
				word = *(output_buffer[card]);
				*(memory.p32++) = word;		
			}
		}
	}
}

